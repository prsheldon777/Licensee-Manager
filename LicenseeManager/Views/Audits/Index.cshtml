@model IEnumerable<LicenseeManager.Models.Audit>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Licensee Status Change Audit Log</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Licensee.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OldStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChangedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Licensee.FullName)
            </td>
            <td>@item.OldStatus.ToString()</td>
            <td>@item.NewStatus.ToString()</td>
            <td>
                @Html.DisplayFor(modelItem => item.ChangedAt)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.AuditId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
