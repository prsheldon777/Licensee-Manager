@model LicenseeManager.Models.LicenseType

@{
    ViewData["Title"] = "License Type Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-3 border-bottom pb-2">License Type Details</h1>

    <div class="card shadow-sm border-0">
        <!-- Dark theme header -->
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@Model.Name</h4>
            <span class="badge bg-info text-dark">License Type ID: @Model.LicenseTypeID</span>
        </div>

        <div class="card-body bg-light">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">License Type Name</dt>
                <dd class="col-sm-9 fw-semibold">@Model.Name</dd>
            </dl>
        </div>

        <div class="card-footer text-end bg-white">
            <a asp-action="Edit" asp-route-id="@Model.LicenseTypeID" class="btn btn-sm btn-primary me-2">Edit</a>
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Back to List</a>
        </div>
    </div>
</div>
