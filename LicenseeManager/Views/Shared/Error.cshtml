@model Microsoft.AspNetCore.Mvc.ModelBinding.ModelStateDictionary
@{
    ViewData["Title"] = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0">Something went wrong</h3>
        </div>
        <div class="card-body">
            <p class="lead">An unexpected error occurred while processing your request.</p>
            <p class="text-muted">If this keeps happening, please contact support or try again later.</p>
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary mt-3">Return to Dashboard</a>
        </div>
    </div>
</div>