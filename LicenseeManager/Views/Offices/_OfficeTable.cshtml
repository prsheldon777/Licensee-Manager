@model IEnumerable<LicenseeManager.Models.Office>

<table class="table">
    <thead>
        <tr>
            <th><a href="#" class="sort-link" data-sort="Name">Name</a></th>
            <th><a href="#" class="sort-link" data-sort="City">City</a></th>
            <th><a href="#" class="sort-link" data-sort="State">State</a></th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OfficeID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.OfficeID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.OfficeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
