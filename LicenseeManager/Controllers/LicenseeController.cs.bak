using Licensee_Manager.Models;
using LicenseeManager.Models;
using Microsoft.AspNetCore.Mvc;
using Microsoft.AspNetCore.Mvc.Rendering;
using Microsoft.EntityFrameworkCore;
using System.Linq;

namespace LicenseeManager.Controllers
{
    public class LicenseeController : Controller
    {
        private readonly AppDbContext _context;

        public LicenseeController(AppDbContext context)
        {
            _context = context;
        }

        public IActionResult Edit(int id)
        {
            var licensee = _context.Licensees
                .Include(l => l.LicenseType)
                .Include(l => l.Office)
                .FirstOrDefault(l => l.LicenseeID == id);

            if (licensee == null)
            {
                return NotFound();
            }

            ViewData["LicenseTypeID"] = new SelectList(_context.LicenseType, "LicenseTypeID", "Name", licensee.LicenseTypeID);
            ViewData["OfficeID"] = new SelectList(_context.Offices, "OfficeID", "Name", licensee.OfficeID);

            return View(licensee);
        }


        public IActionResult Index()
        {
            var licensees = _context.Licensees
                .Include(l => l.LicenseType)
                .Include(l => l.Office)
                .ToList();

            return View(licensees);
        }

        public IActionResult Create()
        {
            ViewData["LicenseTypeID"] = new SelectList(_context.LicenseType, "LicenseTypeID", "Name");
            ViewData["OfficeID"] = new SelectList(_context.Offices, "OfficeID", "Name");
            return View();
        }

        [HttpPost]
        [ValidateAntiForgeryToken]
        public IActionResult Create(Licensee licensee)
        {
            if (ModelState.IsValid)
            {
                _context.Licensees.Add(licensee);
                _context.SaveChanges();

                return RedirectToAction(nameof(Index));
            }

            // repopulate dropdowns if validation fails
            ViewData["LicenseTypeID"] = new SelectList(_context.LicenseType, "LicenseTypeID", "TypeName", licensee.LicenseTypeID);
            ViewData["OfficeID"] = new SelectList(_context.Offices, "OfficeID", "Name", licensee.OfficeID);
            return View(licensee);
        }


        [HttpPost]
        [ValidateAntiForgeryToken]
        public IActionResult Edit(int id, Licensee licensee)
        {
            if (id != licensee.LicenseeID)
            {
                return BadRequest();
            }

            if (ModelState.IsValid)
            {
                _context.Update(licensee);
                _context.SaveChanges();
                return RedirectToAction(nameof(Index));
            }

            return View(licensee);
        }
    }
}
